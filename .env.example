# TaskFlow Configuration Example
# Copy this file to .env and modify the values for your environment

# General Settings
ENVIRONMENT=development
DEBUG=true
TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskflow
DB_USER=taskflow
DB_PASSWORD=your_database_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password_here
REDIS_MAX_CONNECTIONS=20

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_ACCESS_LOG=true
API_CORS_ORIGINS=*

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_PREFETCH_MULTIPLIER=1
WORKER_MAX_TASKS_PER_CHILD=1000
WORKER_TASK_TIMEOUT=300
WORKER_HEARTBEAT_INTERVAL=30
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=60

# Security Configuration
SECRET_KEY=your_very_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_FILE=
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_PORT=8001
METRICS_PREFIX=taskflow
COLLECT_SYSTEM_METRICS=true
HEALTH_CHECK_INTERVAL=60